<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/barra"
    android:padding="@dimen/dimen_2"
    android:gravity="center_vertical|center_horizontal"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_2"
        android:background="@drawable/barra_oscura"
        android:gravity="center"
        >
        <RatingBar
            android:id="@+id/rtbPuntos"
            style="@style/rRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_8"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0"
            android:layout_gravity="center" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_1"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="@dimen/dimen_15"
                android:layout_height="wrap_content"
                android:id="@+id/btnAceptar"
                android:background="@drawable/button_red"
                android:text="@string/btn_aceptar"
                android:textSize="@dimen/text_3"
                android:textColor="?android:textColorTertiary"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/dimen_1"
            android:orientation="vertical">
            <Button
                android:layout_width="@dimen/dimen_15"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancelar"
                android:background="@drawable/button_red"
                android:text="@string/btn_cancelar"
                android:textSize="@dimen/text_3"
                android:textColor="?android:textColorTertiary"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>
