<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/barra_oscura"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_especialidad"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/text_4" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/barra_oscura"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:paddingBottom="@dimen/dimen_1"
        android:paddingRight="@dimen/dimen_1"
        android:paddingLeft="@dimen/dimen_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingRight="@dimen/margin_1"
            android:minHeight="@dimen/dimen_3"
            android:background="@drawable/barra_clara"
            android:text="@string/str_fecha_inicio"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_1"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>