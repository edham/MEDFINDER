<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/barra_garnet"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Contacto"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/text_3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_1"
        android:layout_marginRight="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_1"
            android:layout_weight="4"
            android:background="@drawable/barra_clara"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/dimen_1"
                android:src="@drawable/clinicas" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_1"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/barra"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lblEspecialidad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:text="Contacto"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/text_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@drawable/barra_oscura"
                android:orientation="vertical">
                <RatingBar
                    android:id="@+id/rtbPuntos"
                    style="@style/rRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_9"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"
                    android:isIndicator="true"
                    android:layout_gravity="center" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:gravity="center"
        android:background="@drawable/barra_garnet"
        android:layout_marginTop="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_1"
        android:orientation="vertical"/>

</LinearLayout>