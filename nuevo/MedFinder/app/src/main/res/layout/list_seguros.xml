<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
                android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_1"
            android:layout_weight="3"
            android:background="@drawable/barra"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_10"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dimen_1"
                android:src="@drawable/clinicas" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_1"
            android:background="@drawable/barra_oscura"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/lblNombre"
                    android:layout_width="fill_parent"
                    android:text="Contacto"
                    android:layout_height="fill_parent"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="?android:textColorTertiary"
                    android:textSize="@dimen/text_2"
                    android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:gravity="center"
        android:background="@drawable/barra_oscura"
        android:layout_marginTop="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_1"
        android:orientation="vertical"/>

</LinearLayout>