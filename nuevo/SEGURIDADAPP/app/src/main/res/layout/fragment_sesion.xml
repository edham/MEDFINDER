<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/material_background"
    android:gravity="center">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/barra_oscura"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_1"
            android:gravity="center"
            android:text="@string/str_session"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/text_3"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/border_text_2"
        android:orientation="vertical"
        android:layout_weight="0.2"
        android:layout_margin="@dimen/margin_1"
        android:layout_below="@+id/viewTitulo"
        >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblCatInstitucion"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_garnet"
                android:text="@string/str_fecha_inicio"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblFecha"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_clara"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_garnet"
                android:text="@string/str_hora_inicio"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblHora"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_clara"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_garnet"
                android:text="@string/str_cuadrante"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblCuadrante"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_clara"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_garnet"
                android:text="@string/str_nvehiculo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblNVehiculo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_clara"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_garnet"
                android:text="@string/str_pvehiculo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblPVehiculo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="@dimen/dimen_3"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="@dimen/margin_1"
                android:background="@drawable/barra_clara"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_1"
                android:textStyle="bold" />



        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:gravity="center"
            android:background="@drawable/barra_oscura"
            android:text="@string/str_personal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/text_3"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listVPersonal"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/barra"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1"
            android:text="@string/btn_cerrar"
            android:textSize="@dimen/text_3"
            android:textStyle="bold"
            android:background="@drawable/button_red"
            android:textColor="?android:colorBackground" />
    </LinearLayout>
</LinearLayout>
