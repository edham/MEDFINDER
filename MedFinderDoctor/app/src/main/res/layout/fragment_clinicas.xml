<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.google.android.gms.maps.MapView android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <Spinner
        android:id="@+id/ComboEspecialidad"
        android:background="@drawable/border_blanco_negro"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_1"
        android:layout_marginRight="@dimen/dimen_7"
        android:layout_height="@dimen/dimen_4" />
    <Button
        android:id="@+id/btnOrdenar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_1"
        android:background="@drawable/ic_distancia"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <com.med.finder.doctor.utilidades.CustomFontTextView
        android:id="@+id/lblTotal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_4"
        app:textAllCaps="true"
        android:gravity="center"
        android:textSize="@dimen/text_2"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_7"
        android:layout_marginRight="@dimen/dimen_7"
        android:layout_marginBottom="@dimen/dimen_2"
        app:fontAttr="@string/font_myraid_bold" />
</RelativeLayout>