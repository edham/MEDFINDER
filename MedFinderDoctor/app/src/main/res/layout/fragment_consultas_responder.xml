<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_blanco_negro"
                android:layout_marginTop="@dimen/margin_1"
                android:padding="@dimen/margin_1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_3"
                        android:layout_marginRight="@dimen/line_0"
                        android:layout_weight="3"
                        android:background="@drawable/border_blanco"
                        android:gravity="center"
                        android:minHeight="@dimen/dimen_0"
                        android:orientation="vertical">

                        <com.med.finder.doctor.utilidades.CustomFontTextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:layout_marginLeft="@dimen/line_4"
                            android:text="@string/str_asunto"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text"
                            app:fontAttr="@string/font_myraid_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_3"

                        android:layout_weight="1"
                        android:background="@drawable/border_blanco_negro"
                        android:layout_marginLeft="@dimen/line_0"
                        android:gravity="center"
                        android:minHeight="@dimen/dimen_0"
                        android:orientation="vertical">
                        <com.med.finder.doctor.utilidades.CustomFontTextView
                            android:id="@+id/lblAsunto"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dimen_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_1"
                            app:fontAttr="@string/font_myraid_bold" />
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/line_2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_3"
                        android:layout_marginRight="@dimen/line_0"
                        android:layout_weight="3"
                        android:background="@drawable/border_blanco"
                        android:gravity="center"
                        android:minHeight="@dimen/dimen_0"
                        android:orientation="vertical">

                        <com.med.finder.doctor.utilidades.CustomFontTextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:layout_marginLeft="@dimen/line_4"
                            android:text="@string/str_sintomas"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text"
                            app:fontAttr="@string/font_myraid_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_3"

                        android:layout_weight="1"
                        android:background="@drawable/border_blanco_negro"
                        android:layout_marginLeft="@dimen/line_0"
                        android:gravity="center"
                        android:minHeight="@dimen/dimen_0"
                        android:orientation="vertical">
                        <com.med.finder.doctor.utilidades.CustomFontTextView
                            android:id="@+id/lblSintomas"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dimen_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_1"
                            app:fontAttr="@string/font_myraid_bold" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewImgFoto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/line_2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="@dimen/line_0"
                        android:layout_weight="3"
                        android:background="@drawable/border_blanco"
                        android:gravity="center"
                        android:minHeight="@dimen/dimen_0"
                        android:orientation="vertical">

                        <com.med.finder.doctor.utilidades.CustomFontTextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:layout_marginLeft="@dimen/line_4"
                            android:text="@string/str_foto"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text"
                            app:fontAttr="@string/font_myraid_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_blanco_negro"
                        android:layout_marginLeft="@dimen/line_0"
                        android:gravity="center"
                        android:minHeight="@dimen/dimen_0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/border_blanco_negro"
                            android:layout_marginLeft="@dimen/dimen_8"
                            android:layout_marginTop="@dimen/dimen_1"
                            android:layout_marginBottom="@dimen/dimen_1"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/imgFoto"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:layout_margin="@dimen/dimen_1" />


                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_marginTop="@dimen/dimen_1"
                android:id="@+id/fragment_paciente"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <com.med.finder.doctor.utilidades.CustomFontTextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_4"
                    android:gravity="center"
                    android:textSize="@dimen/text_1"
                    android:layout_marginRight="@dimen/margin_1"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:text="@string/str_responder_consulta"
                    android:textColor="@color/theme_window_background"
                    android:textStyle="bold"
                    app:fontAttr="@string/font_myraid_bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_1"
                android:padding="@dimen/line_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_window_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/txtRespuesta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center_horizontal"
                            android:hint="@string/str_ingrese_respuesta_consulta"
                            android:maxLength="500"
                            android:textSize="@dimen/text_2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnCancelar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_cancelar"
                        android:textSize="@dimen/text_1"
                        android:textColor="?android:colorBackground"
                        android:theme="@style/MyButton"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnAceptar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_aceptar"
                        android:textSize="@dimen/text_1"
                        android:textColor="?android:colorBackground"
                        android:theme="@style/MyButton"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>