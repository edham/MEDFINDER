<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_6"
            android:gravity="center"
            android:background="@drawable/border_blanco"
            android:layout_marginLeft="@dimen/line_4"
            android:layout_marginTop="@dimen/line_4"
            android:layout_marginBottom="@dimen/line_4"
            android:layout_weight="2"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/line_4"
                android:src="@drawable/ic_clinicas" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:background="@drawable/border_blanco"
            android:layout_margin="@dimen/line_4"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.med.finder.doctor.utilidades.CustomFontTextView
                android:id="@+id/lblNombre"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_4"
                app:textAllCaps="true"
                android:gravity="center"
                android:textSize="@dimen/text_2"
                app:fontAttr="@string/font_myraid_bold" />



        </LinearLayout>
</LinearLayout>