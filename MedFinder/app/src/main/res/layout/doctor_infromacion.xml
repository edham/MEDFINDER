                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"
                    android:isIndicator="true"
                    android:layout_gravity="center" />

    </LinearLayout>
    
</LinearLayout>     
      
   
