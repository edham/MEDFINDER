        android:layout_marginTop="2dp" 
        android:layout_marginBottom="2dp"         
        android:src="@drawable/doctor" />


    </LinearLayout>

    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="center"
