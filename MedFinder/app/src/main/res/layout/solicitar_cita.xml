<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/col2"
    android:gravity="center_vertical|center_horizontal"
    >
    
<LinearLayout 
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:gravity="center_vertical" 
android:layout_marginLeft="1dp"
android:layout_marginRight="1dp"
android:layout_marginTop="5dp"
android:background="@drawable/col2"
android:orientation="vertical">
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Paciente"
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="18dp"
        android:textColor="@color/col1_texto" />
  <Spinner
         android:id="@+id/ComboPaciente"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:gravity="right"
    >
       <EditText
        android:id="@+id/txtDetalle"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:gravity="top|left"
        android:hint="Ingrese un motivo"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxWidth="300sp"
        android:minWidth="10.0dip"
        android:scrollHorizontally="false" />
        
    </LinearLayout>    
    
 
     

      <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" 
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                    <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:gravity="center"
                    android:layout_marginRight="2dp" 
                    android:layout_weight="1"
                    android:orientation="vertical">
                         <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"  
                         android:id="@+id/btnAceptar"    
                         android:background="@drawable/boton1"     
                          android:textColor="@color/boton_texto"                              
                        android:text="Aceptar"
                        android:textSize="15dp"
                        android:textStyle="bold"/>	

                    </LinearLayout>

                    <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:gravity="center"
                    android:layout_marginLeft="2dp" 
                    android:layout_weight="1"
                    android:orientation="vertical">
                        <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"  
                         android:id="@+id/btnCancelar"    
                         android:background="@drawable/boton2"      
                          android:textColor="@color/boton_texto"                             
                        android:text="Cancelar"
                        android:textSize="15dp"
                        android:textStyle="bold"/>	

                    </LinearLayout>
            </LinearLayout>
      
   

    
</LinearLayout>
