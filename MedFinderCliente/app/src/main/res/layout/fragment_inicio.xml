<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/ComboEspecialidad"
            android:background="@drawable/border_blanco_negro"
            android:layout_margin="@dimen/dimen_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/ComboBusqueda"
            android:background="@drawable/border_blanco_negro"
            android:layout_marginLeft="@dimen/dimen_0"
            android:layout_marginRight="@dimen/dimen_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_0"
            android:layout_marginRight="@dimen/dimen_0"
            android:id="@+id/viewFavoritos"
            android:gravity="center|right"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chbFavoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_blanco_negro"
                android:paddingRight="@dimen/dimen_1"
                android:textStyle="bold"
                android:button="@drawable/checkbox_favorito"
                android:gravity="center"
                android:textSize="@dimen/text_0"
                android:textColor="@color/colorPrimary"
                android:text="@string/nav_favoritos"/>

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_margin="@dimen/dimen_0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>